<configuration>
	<crawler>
		<agent>
			<sleep_per_fetch min_seconds="0.5" max_seconds="1.1" />
			<!-- <proxy url="" /> -->
			<target_save module="saver" class="TestSaver">

			</target_save>
		</agent>
		<path name="montreal craigslist">
			<target_url value="http://montreal.en.craigslist.ca/bogusblah/" />
			<feed_url value="http://montreal.en.craigslist.ca/apa/">
				<target_regex value="/apa/\d{8,12}.html" max_matches="5"/>
				<feed_regex value="index\d{3}.html" max_depth="6" max_matches="1">
					<target_regex value="/apa/\d{8,12}.html" max_matches="5"/>
				</feed_regex>
			</feed_url>
			<feed_url value="http://montreal.en.craigslist.ca/roo/">
				<target_regex value="/roo/\d{8,12}.html" /> 
				<feed_regex value="index\d{3}.html" max_depth="6" max_mathes="1">
					<target_regex value="/roo/\d{8,12}.html" />
				</feed_regex>
			</feed_url>
			<!-- TODO: other categories -->
		</path>
	</crawler>
	<parser>


	</parser>
</configuration>
